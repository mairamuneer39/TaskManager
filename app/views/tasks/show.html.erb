<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="container col-lg-9">
    <div class="row">
      <div class="col-lg-4">
        <h3>Title:</h3>
        <%= @task.title %>
      </div>
      <div class="col-lg-4">
        <h3>Due date:</h3>
        <%= @task.due_date %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <h3>Description:</h3>
        <%= @task.description %>
      </div>
      <div class="col-lg-4">
        <h3>Start date:</h3>
        <%= @task.start_date %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <h3>Priority:</h3>
        <%= @task.priority %>
      </div>
      <div class="col-lg-4">
        <h3>Assigned to:</h3>
        <%= User.find_name_by_id(@task.assigned_to_id) %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <h3>Done:</h3>
        <%= @task.done %>
      </div>
      <div class="col-lg-4">
        <h3>Time Spent:</h3>
        <%= @task.time_spent %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <h3>Status:</h3>
        <%= @task.status %>
      </div>
    </div>


  </div>

  <div class="container">
    <div class="col-lg-3">
      <%= button_to 'Edit Task', edit_task_path(@task), method: :get, class:"btn btn-success btn-block btn-lg" %>
    </div>
    <br><br><br>
    
    <%unless @task.status %>
      <div class="col-lg-3">
        <%= button_to 'Start Task', start_task_path(@task), method: :patch, class:"btn btn-success btn-block btn-lg"  %>
      </div>
      <br><br><br>
    <% end %>
    <% if can?(:end) %>
      <div class="col-lg-3">
        <%= button_to 'End Task', end_task_path(@task), method: :patch, class: "btn btn-success btn-block btn-lg"  %>
      </div>
    <% end %>
    <%= link_to 'Back', tasks_path %>
  </div>

</div>